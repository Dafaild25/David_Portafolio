---
import Badge from "./Adornos/Badge.astro";
import BadgeHover from "./Adornos/BadgeHover.astro";
import SectionMaster from "./Contenedor-Principal/section-master.astro";
import Descarga from "./Icons/Descarga.astro";

---
<SectionMaster id="hero" class="min-h-screen">
    <!-- Fondo animado de partículas -->
    
    <div id="vanta-bg" class="absolute inset-0 -z-10 w-full h-full"></div>

  
    <main class="flex flex-col items-center text-center w-full px-4 sm:px-6 lg:px-8 mt-10 space-y-4">
      <!-- Foto y badge a la izquierda -->
      <div class="flex flex-row justify-center items-center gap-6 mb-8">
        <img class="rounded-full w-14 h-16 transition-transform duration-300 border-blue-200/10 border-4 ease-in-out hover:scale-150" src="img/fotoCv.webp" alt="David Aimacaña" />
        <div class="flex items-center animate-slide-in">
          <Badge>Ing. en Sistemas</Badge>
        </div>
      </div>
      
  
      <!-- Título -->
      
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-primary flex items-center justify-start gap-2">
          <img
          src="https://upload.wikimedia.org/wikipedia/commons/e/e8/Flag_of_Ecuador.svg"
          alt="Bandera de Ecuador"
          class="inline w-8 h-6 "
        />
            Hola! soy David
        </h1>
      
  
      <!-- Descripción -->
      <h2 class=" sm:text-lg md:text-2xl justify-center text-gray-700 max-w-3xl">
        <span>Comprometido a crecer en el campo de la programación, </span> 
        <span class="text-amber-900/90">en busca de oportunidades para aplicar mis conocimientos y contribuir a proyectos creativos.</span>
      </h2>
  
      <!-- Botón -->
      <div class="mt-4 flex  items-center justify-center">
        

        <a href="Documentos/cvDavid.pdf" target="_blank" rel="noopener noreferrer" >
         <BadgeHover color="green" icon={Descarga}>  Descargar CV</BadgeHover>
        </a>

      </div>
    </main>



    

    
      

    
  </SectionMaster>
  


  <script>
  // Carga dinámica de scripts
  function loadScript(src: string) {
    return new Promise((resolve, reject) => {
      const s = document.createElement('script');
      s.src = src;
      s.onload = resolve;
      s.onerror = reject;
      document.head.appendChild(s);
    });
  }

  async function initVanta() {
    try {
      await loadScript("https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js");
      await loadScript("https://cdn.jsdelivr.net/npm/vanta@0.5.24/dist/vanta.birds.min.js");

      if (window.VANTA && window.THREE) {
        VANTA.BIRDS({
          el: "#vanta-bg",
          mouseControls: true,
          touchControls: true,
          gyroControls: false,
          minHeight: 200.00,
          minWidth: 200.00,
          scale: 4.00,
          scaleMobile: 4.00,
          backgroundColor: 0xffffff,
          color1: 0x764ba2,
          color2: 0xffb347,
          quantity: 3
        });
      } else {
        console.error("VANTA o THREE no están disponibles.");
      }
    } catch (e) {
      console.error("Error cargando scripts de Vanta:", e);
    }
  }

  initVanta();
</script>
