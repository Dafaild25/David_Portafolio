<form class="space-y-6 w-full" onsubmit="event.preventDefault(); alert('Formulario enviado ✉️');">
    <div>
      <label class="block text-sm font-semibold text-gray-700">Nombre</label>
      <input type="text" placeholder="Tu nombre" class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-primary" required />
    </div>
    <div>
      <label class="block text-sm font-semibold text-gray-700">Correo electrónico</label>
      <input type="email" placeholder="tucorreo@ejemplo.com" class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-primary" required />
    </div>
    <div>
      <label class="block text-sm font-semibold text-gray-700">Mensaje</label>
      <textarea rows="4" placeholder="Cuéntame sobre tu proyecto..." class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-primary" required></textarea>
    </div>
    <button type="submit" class="bg-primary text-white font-semibold px-6 py-2 rounded-md hover:bg-primary/90 transition">Enviar mensaje</button>
  </form>
  