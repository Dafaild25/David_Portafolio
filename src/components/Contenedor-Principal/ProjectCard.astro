---
const { project } = Astro.props;
---

<div class="group relative bg-white rounded-lg shadow-md overflow-hidden transform transition duration-300 hover:scale-[1.03] hover:shadow-xl">
  <img src={project.image} alt={project.title} class="h-48 w-full object-cover" />

  <div class="p-4 space-y-2">
    <h3 class="text-lg font-bold text-primary">{project.title}</h3>
    <time class="block text-sm text-green-600">{project.date}</time>
    <p class="text-sm text-gray-700">{project.description}</p>
  </div>

  <!-- Overlay decorativo en hover -->
  <div class="absolute inset-0 bg-primary/10 opacity-0 group-hover:opacity-100 transition duration-300 z-0"></div>
</div>
